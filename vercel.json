{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server.js" },  // Solo las rutas que empiecen con /api van al backend
    { "src": "/(.*)", "dest": "/index.html" }       // Sirve el index.html directamente
  ]
}
